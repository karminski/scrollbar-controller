{
  "name": "scrollbar-controller",
  "version": "2.0.0",
  "description": "提供对网页滚动条显示的精细控制，支持三种显示模式和自动滚动",
  "main": "src/main.js",
  "scripts": {
    "build": "node build/build.js",
    "build:dev": "node build/build.js --dev",
    "build:prod": "node build/build.js --minify",
    "build:watch": "node build/build.js --watch",
    "dev": "node build/dev.js",
    "test": "node test/basic-test.js",
    "test:watch": "echo 'Test watch mode will be added later'",
    "lint": "node build/simple-lint.js",
    "lint:fix": "node build/lint.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"build/**/*.js\"",
    "format:check": "node -e \"console.log('Format check passed - using ESLint for code style')\"",
    "clean": "node build/clean.js",
    "clean:all": "npm run clean && rm -rf node_modules/",
    "validate": "npm run lint && npm run format:check && npm run test",

    "start": "npm run build:dev && echo 'Built development version. Check dist/ folder.'",
    "watch": "npm run build:watch",
    "dev:no-watch": "node build/dev.js --no-watch",
    "dev:external-map": "node build/dev.js --external-sourcemap",
    "test:ci": "node build/test-ci.js",
    "ci": "npm run test:ci"
  },
  "keywords": [
    "userscript",
    "scrollbar",
    "tampermonkey",
    "greasemonkey",
    "browser-extension"
  ],
  "author": "karminski-牙医",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "chokidar": "^3.5.0",
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karminski/scrollbar-controller.git"
  },
  "bugs": {
    "url": "https://github.com/karminski/scrollbar-controller/issues"
  },
  "homepage": "https://github.com/karminski/scrollbar-controller#readme"
}
